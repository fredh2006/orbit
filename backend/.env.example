# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp  # Model for video analysis (Node 1)
GEMINI_FAST_MODEL=gemini-2.0-flash-lite  # Fast model for persona reactions (Nodes 2, 2.5, 3, 4)
GEMINI_MAX_CONCURRENT=10
GEMINI_TIMEOUT=60
GEMINI_MAX_RETRIES=5

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Simulation Configuration
DEFAULT_PERSONA_COUNT=500

# Cloudflare R2 Storage Configuration
R2_ACCOUNT_ID=your_r2_account_id_here
R2_ACCESS_KEY_ID=your_r2_access_key_id_here
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here
R2_BUCKET_NAME=your_r2_bucket_name_here
R2_PUBLIC_URL=https://your-bucket-name.r2.dev  # Your R2 public bucket URL
