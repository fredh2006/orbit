# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp  # Model for video analysis (Node 1)
GEMINI_FAST_MODEL=gemini-2.0-flash-exp  # Fast model for persona reactions (Nodes 2, 2.5, 3, 4)
GEMINI_MAX_CONCURRENT=50
GEMINI_TIMEOUT=60
GEMINI_MAX_RETRIES=3

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Simulation Configuration
DEFAULT_PERSONA_COUNT=500
